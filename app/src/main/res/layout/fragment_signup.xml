<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_50sdp"
        android:paddingRight="@dimen/_50sdp">

        <com.mycrops.view.MyCropsTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mobile_number"
            android:textColor="@color/colorLoginLabel"
            android:textSize="@dimen/_10sdp"
            app:fontName="@string/tv_font" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.mycrops.view.MyCropsEditText
                android:id="@+id/fragment_signup_edt_mobile_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.80"
                android:background="@drawable/login_edittext_style"
                android:hint="@string/mobile_number"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorLoginBtn"
                android:textColorHint="@color/colorEditTextBorder"
                android:textSize="@dimen/_10sdp"
                app:fontName="@string/tv_font" />

            <ImageView
                android:id="@+id/fragment_signup_iv_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/ic_action_right"
                android:visibility="visible" />

        </LinearLayout>


        <com.mycrops.view.MyCropsTextView
            android:id="@+id/fragment_signup_tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textColor="@color/colorLoginLabel"
            android:textSize="@dimen/_10sdp"
            app:fontName="@string/tv_font" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mycrops.view.MyCropsEditText
                android:id="@+id/fragment_signup_edt_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.80"
                android:background="@drawable/login_edittext_style"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorLoginBtn"
                android:textColorHint="@color/colorEditTextBorder"
                android:textSize="@dimen/_10sdp"
                app:fontName="@string/tv_font" />

            <ImageView
                android:id="@+id/fragment_signup_iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/ic_action_right"
                android:visibility="visible" />

        </LinearLayout>

        <com.mycrops.view.MyCropsTextView
            android:id="@+id/fragment_signup_tv_validation_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/valid_msg_password"
            android:textColor="@color/colorLoginLabel"
            android:textSize="@dimen/_7sdp"
            app:fontName="@string/tv_font" />


        <com.mycrops.view.MyCropsTextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/forgot_password"
            android:textColor="@color/colorLoginLabel"
            android:textSize="@dimen/_10sdp"
            app:fontName="@string/tv_font" />

        <com.mycrops.view.MyCropsButton
            android:id="@+id/fragment_signup_btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/login_button_style"
            android:padding="@dimen/_5sdp"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_10sdp"
            app:fontName="@string/btn_font" />

        <com.mycrops.view.MyCropsButton
            android:id="@+id/fragment_signup_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/login_button_style"
            android:padding="@dimen/_5sdp"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_10sdp"
            app:fontName="@string/btn_font" />


    </LinearLayout>
</ScrollView>