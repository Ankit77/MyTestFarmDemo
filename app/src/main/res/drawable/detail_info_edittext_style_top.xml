<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->


    <!-- Bottom right side 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/textview_color" />
        </shape>
    </item>

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/textview_color" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/textColorPrimary" />
        </shape>
    </item>
</layer-list>
